{
    "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
    "name": "dcc-dotnet-yarn-combined-with-database-and-gui-and-fixtures-amd64",
    "image": "ghcr.io/devcontainerz/images/saas:latest-amd64",
    "overrideCommand": false,
    "forwardPorts": [
        8080
    ],
    "runArgs": [
        "--label=com.devcontainerz.type=test",
        "--shm-size=1g",
        "--cap-add=SYS_PTRACE",
        "--security-opt=seccomp=unconfined",
        "--add-host=host.docker.internal:host-gateway",
        "--volume=/var/run/docker.sock:/var/run/docker.sock",
        "--env=GITHUB_USERNAME",
        "--env=GITHUB_TOKEN",
        "--env=GH_TOKEN",
        "--env=OAUTH2_PROXY_CLIENT_ID",
        "--env=OAUTH2_PROXY_CLIENT_SECRET",
        "--env=OAUTH2_PROXY_COOKIE_SECRET"
    ],
    "features": {
        "ghcr.io/devcontainerz/features/dpkg-config-global:latest": {},
        "ghcr.io/devcontainerz/features/fnm:latest": {"version": "latest"},
        "ghcr.io/devcontainerz/features/fnm-global-node:latest": {"version": "latest"},
        "ghcr.io/devcontainerz/features/dotnet-sdk:latest": {
            "version": "latest"
        },
        "ghcr.io/devcontainerz/features/dotnet-sdk-config:latest": {},
        "ghcr.io/devcontainerz/features/postgresql:latest": {"version": "latest"},
        "ghcr.io/devcontainerz/features/s6-service-postgresql:latest": {},
        "ghcr.io/devcontainerz/features/i3:latest": {},
        "ghcr.io/devcontainerz/features/i3-config-global:latest": {},
        "ghcr.io/devcontainerz/features/i3-config-xpra:latest": {"version": "latest"},
        "ghcr.io/devcontainerz/features/i3status:latest": {},
        // "ghcr.io/devcontainerz/features/i3status-config-i3:latest": {},
        "ghcr.io/devcontainerz/features/i3status-config-global:latest": {},
        "ghcr.io/devcontainerz/features/s6-service-xpra:latest": {},
        "ghcr.io/devcontainerz/features/xpra:latest": {},
        "ghcr.io/devcontainerz/features/xpra-config:latest": {},
        "ghcr.io/devcontainerz/features/that-db-fixtures:latest": {},
    },
    "containerEnv": {
        "WORKDIR": "/workspaces/repo",
        "_XPRA__debug": "clipboard",
        "XPRA__debug": "clipboard",
        "SEBST": "BLA",
        "SEBST__debug": "BLUBB"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "augustocdias.tasks-shell-input",
                "spmeesseman.vscode-taskexplorer",
                "ms-vsliveshare.vsliveshare",
                "ms-dotnettools.vscode-dotnet-runtime",
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",
                "ms-vscode.vscode-typescript-next",
                "zoma.vscode-auto-open-workspace"
            ]
        },
        "codespaces": {
            "repositories": {
                "devcontainerz/features": {
                    "permissions": {
                        "packages": "read",
                        "contents": "read"
                    }
                }
            }
        }
    }
}